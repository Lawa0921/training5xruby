<h1><%= t("missions.list") %></h1>
<%= search_form_for @q do |f| %>
  <%= f.label :name_cont, t("missions.name") %>
  <%= f.search_field :name_cont %>

  <%= f.label :status_eq, t("missions.status") %>
  <%= f.select :status_eq, Mission.statuses.to_a %>
  <%= f.submit %>
<% end %>
<table>
  <thead>
    <td><%= t("missions.name") %></td>
    <td><%= t("missions.desc") %></td>
    <td><%= t("missions.start") %></td>
    <td><%= t("missions.end") %></td>
    <td><%= t("missions.status") %></td>
    <td><%= t("missions.order") %></td>
  </thead>
  <tbody>
    <% @missions.each do |mission|%>
      <tr>
        <td>
          <%= mission.name %>
        </td>
        <td>
          <%= mission.description %>
        </td>
        <td>
          <%= mission.start_at %>
        </td>
        <td>
          <%= mission.end_at %>
        </td>
        <td>
          <%= mission.status %>
        </td>
        <td>
          <%= mission.order %>
        </td>
        <td>
          <%= link_to t("show"), mission_path(mission) %>
        </td>
        <td>
          <%= link_to t("edit"), edit_mission_path(mission) %>
        </td>
        <td>
          <%= link_to t("delete"), mission_path(mission), data: {method: "DELETE", confirm: t("missions.delete_confirm")} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t("missions.new_mission"), new_mission_path, class: "new-link" %>
